!!!
%html{:lang => 'en'}
  %head
    - csrf_meta_tags
    - csp_meta_tag
    
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'width=device-width, initial-scale=1, shrink-to-fit=no', :name => 'viewport'}/
    %meta{:content => 'SB Admin2_Dashboard', :name => 'description'}/
    %meta{:content => 'Oscar M. Olivera', :name => 'author'}/
    %title SB Admin 2 - Dashboard

    = stylesheet_pack_tag 'application'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body.bg-gradient-primary
    .container
      / Outer Row
      .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
          .card.o-hidden.border-0.shadow-lg.my-5
            .card-body.p-0
              / Nested Row within Card Body
              .row
                .col-lg-6.d-none.d-lg-block.bg-login-image
                .col-lg-6
                  .p-5
                    .text-center
                      %h1.h4.text-gray-900.mb-4 Welcome Back!
                    =yield