// Show toaster message
toastr.info('Cliente actualizado con exíto!', 'Confirmado', {closeButton:true, progressBar: true});

// Close the modal
$('#modalClients').modal('toggle');

// Replace via Ajax the item edited/updated in a rowtable from the view
// without asking the server again nor refreshing the page.
$('#client_<%= @client.id %>').replaceWith(
  '<tr id="client_<%= @client.id %>" >' +
    '<td><%= @client.name %></td>' +
    '<td><%= @client.address %></td>' +
    '<td><%= @client.email %></td>' +
    '<td><%= @client.telephone %></td>' +
    '<td>' +
      '<%= link_to "Editar", edit_client_path(@client), class: "btn btn-xs btn-info", remote: true %>' +
      '<%= link_to "Borrar", @client, class: "btn btn-xs btn-danger", remote: true, method: :delete, data: { confirm: "¿Desea Borrar Este Cliente: #{@client.name}?"} %>' +
    '</td>'+ 
  '</tr>'
);
