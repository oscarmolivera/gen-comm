= form_for @client, remote: true do |f|
  .form-group
    %h4.control-label
      ='Datos del Cliente'
  %div{:class => "item form-group#{@client.errors[:name].any? ? 'has-error has-feedback' : ''}"}
    = f.label :name, 'Nombre Cliente'
    .input-group
      = f.text_field :name, class: 'form-control', placeholder: 'Ingrese nombre'
      - if @client.errors[:name].any?
        %p.categories-errors
          = @client.errors[:name].to_s[/\w([^"]*)/]
  %div{:class => "item form-group#{@client.errors[:address].any? ? 'has-error has-feedback' : ''}"}
    = f.label :address, 'Dirección Cliente'
    .input-group
      = f.text_field :address, class: 'form-control', placeholder: 'Ingrese dirección'
      - if @client.errors[:address].any?
        %p.categories-errors
          = @client.errors[:address].to_s[/\w([^"]*)/]
  %div{:class => "item form-group#{@client.errors[:email].any? ? 'has-error has-feedback' : ''}"}
    = f.label :email, 'Correo Electrónico'
    .input-group
      = f.email_field :email, class: 'form-control', placeholder: 'Ingrese email'
      - if @client.errors[:email].any?
        %p.categories-errors
          = @client.errors[:email].to_s[/\w([^"]*)/]
  %div{:class => "item form-group#{@client.errors[:telephone].any? ? 'has-error has-feedback' : ''}"}
    = f.label :telephone, 'Número Teléfonico'
    .input-group
      = f.text_field :telephone, class: 'form-control', placeholder: 'Ingrese oficina o móvil'
      - if @client.errors[:telephone].any?
        %p.categories-errors
          = @client.errors[:telephone].to_s[/\w([^"]*)/]                  
  .actions.col-md-9.col-sm-9.col-xs12.col-md-offset-3
    = f.submit @client.new_record? ? 'Crear Cliente' : 'Actualizar Informacion', class: 'btn btn-success'