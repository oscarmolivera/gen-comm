// Remove via Ajax the item deleted in a rowtable from the view
// without asking the server again nor refreshing the page.
$('#product_<%= @product.id %>').fadeOut();

// Show toaster message
toastr.warning("<%= t('toastr.products.delete') %>", 
               "<%= t('toastr.products.alert') %>", 
               {closeButton:true, progressBar: true
              });