%h1.h3.mb-2.text-gray-800
  ='Categorias'
%p.mb-4
  ='Crear, editar o desactivar categorias de la aplicacion.'

.card.shadow.md-4
  .card-header.py-3
    %h6.m-0.font-weight-bold.text-primary
      ='Listado de Categorias Activas'
  .px-4.pt-2
    =link_to  new_category_path, id: 'add-new-category', class:'btn btn-success', remote: true do
      %span.fas.fa-plus-square    
      = 'Nueva Category'
  .card-body
    .table-responsive
      %table#tablaCategorias.table.table-border{:width => "100%"}
        %thead
          %tr
            %th='Nombre Categoria'
            %th='Descripción'
            %th='Actiones'
        %tbody
          - @categories.each do |category|
            %tr{:id => "category_#{category.id}"}
              %td= category.name
              %td= category.description
              %td
                = link_to 'Editar', edit_category_path(category), class: 'btn btn-xs btn-info', remote: true
                = link_to 'Desactivar', category, class: 'btn btn-xs btn-danger', remote: true, method: :delete, data: { confirm: "¿Desea Borrar la Categoría: #{category.name}?"}

= render 'modal_categories'

:javascript
  $( document ).ready( function(){
    $('#tablaCategorias').DataTable({
       "iDisplayLength": 5,
       "lengthMenu": [[5, 10, 15, 20, 25, 50, -1], [5, 10, 15, 20, 25, 50, "All"]]
    });
  });

